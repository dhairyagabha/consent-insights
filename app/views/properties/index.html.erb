<div class="row">
  <div class="col-sm-6">
    <h1>Properties</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_property_path, class: 'btn btn-primary' do %>
    Add New Property
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Domain</th>
      </tr>
    </thead>

    <tbody>
      <% if @properties %>
        <% @properties.each do |property| %>
          <%= content_tag :tr, id: dom_id(property), class: dom_class(property) do %> 
            <td><%= link_to property.name, property %></td>
            <td><%= property.domain %></td>
          <% end %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2">Create a property <%= link_to "here", new_property_path %>!</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
